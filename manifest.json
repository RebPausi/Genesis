{
  "name": "Amazon Genesis",
  "version": "1.0",
  "manifest_version": 2,
  "description": "An extension to find the Lib-Gen page of the Amazon B",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_scripts": [
      {
        "matches": [ "https://*/*","http://*/*","http://www.amazon.in/*"],
        "js": ["js/jquery/jquery.js", "js/myscript.js"]
      }
    ],
    "browser_action": {
          "default_icon": {                    // optional
            "16": "icons/icon16.png"           // optional
          },
          "default_title": "Amazon Genesis",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
        },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "tabs",
    "webNavigation"
  ]
}